FROM python:3.11-slim

# Install system dependencies for OpenCV and GPU support
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    python3-dev \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    libgomp1 \
    libgstreamer1.0-0 \
    libgstreamer-plugins-base1.0-0 \
    ffmpeg \
    curl \
    libx11-dev \
    libxext-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the entire project (source will be mounted as volume)
# This is just for initial setup
COPY . .

# Environment variables for development
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV API_PORT=8000
ENV API_HOST=0.0.0.0

# Expose the API port
EXPOSE 8000 8081

# Use watchdog to auto-reload on file changes
# Use shell form to expand environment variable
CMD python -m uvicorn backend.api.main:app --host ${API_HOST} --port ${API_PORT} --reload --reload-dir /app/backend
