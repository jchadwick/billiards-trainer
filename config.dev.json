{
  "api": {
    "authentication": {
      "enabled": false,
      "jwt_secret_key": "dev-secret-key-change-in-production",
      "jwt_algorithm": "HS256",
      "jwt_expiration_hours": 24,
      "refresh_token_expiration_days": 30,
      "enable_api_keys": false,
      "api_key_expiration_days": 365,
      "password_min_length": 8,
      "require_password_complexity": false,
      "max_login_attempts": 5,
      "lockout_duration_minutes": 15
    },
    "network": {
      "host": "0.0.0.0",
      "port": 8000,
      "workers": 1,
      "max_connections": 100,
      "websocket_ping_interval": 30,
      "websocket_ping_timeout": 10,
      "request_timeout": 30,
      "enable_compression": true,
      "ssl_enabled": false
    },
    "cors": {
      "allow_origins": ["http://localhost:3000", "http://127.0.0.1:3000"],
      "allow_credentials": false,
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["*"],
      "max_age": 3600
    },
    "rate_limiting": {
      "enabled": true,
      "default_rate": "100/minute",
      "burst_size": 200,
      "redis_url": null
    },
    "enable_docs": true,
    "docs_url": "/docs",
    "openapi_url": "/openapi.json",
    "api_prefix": "/api/v1",
    "websocket_path": "/ws",
    "health_check_path": "/health",
    "metrics_enabled": true,
    "metrics_path": "/metrics"
  },
  "core": {
    "max_history_size": 1000,
    "physics_timestep": 0.001,
    "enable_caching": true,
    "cache_ttl": 300,
    "max_trajectory_points": 500,
    "collision_tolerance": 0.001,
    "async_processing": true,
    "performance_monitoring": true
  },
  "vision": {
    "camera_index": 0,
    "resolution": [1920, 1080],
    "fps": 30,
    "buffer_size": 5,
    "detection_confidence": 0.8,
    "tracking_enabled": true,
    "preprocessing": {
      "gaussian_blur": 3,
      "color_space": "HSV",
      "auto_exposure": true,
      "noise_reduction": true
    },
    "table_detection": {
      "edge_threshold": 50,
      "corner_accuracy": 0.02,
      "min_table_area": 50000
    },
    "ball_detection": {
      "hough_param1": 50,
      "hough_param2": 30,
      "min_radius": 8,
      "max_radius": 15,
      "min_distance": 20
    }
  },
  "projector": {
    "display": {
      "mode": "window",
      "monitor_index": 0,
      "resolution": [1920, 1080],
      "fullscreen": false,
      "borderless": false,
      "always_on_top": true
    },
    "rendering": {
      "quality": "high",
      "target_fps": 60,
      "vsync": true,
      "antialiasing": true,
      "line_width": 3,
      "fade_duration": 1.0
    },
    "calibration": {
      "auto_detect": true,
      "keystone_correction": true,
      "save_profile": true,
      "validation_threshold": 5.0
    },
    "network": {
      "websocket_url": "ws://localhost:8000/ws",
      "auto_reconnect": true,
      "reconnect_interval": 5,
      "max_reconnect_attempts": 10
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_logging": false,
    "console_logging": true,
    "log_file": "billiards_trainer.log",
    "max_log_size": "10MB",
    "backup_count": 5
  }
}
