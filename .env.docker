# Docker Environment Configuration for Billiards Trainer
# ======================================================
# This file contains Docker-specific environment variables.
# Copy this to .env for Docker Compose or set these in your container orchestration.

# ===== Build Configuration =====
BUILD_DATE=2024-01-01T00:00:00Z
BUILD_VERSION=1.0.0
BUILD_COMMIT=docker-build

# ===== Application Configuration =====
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
APP_NAME=billiards-trainer
APP_VERSION=1.0.0

# ===== API Configuration =====
API_PORT=8000
WS_PORT=8001
METRICS_PORT=9090

# ===== Security Configuration =====
# IMPORTANT: Set these to secure values in production!
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-TO-A-SECURE-RANDOM-STRING
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_KEY_HEADER=X-API-Key
DEFAULT_API_KEY=CHANGE-THIS-IN-PRODUCTION

# ===== Computer Vision Configuration =====
CAMERA_INDEX=0
CAMERA_WIDTH=1920
CAMERA_HEIGHT=1080
CAMERA_FPS=30
VISION_BUFFER_SIZE=10
DETECTION_CONFIDENCE_THRESHOLD=0.8
TRACKING_UPDATE_INTERVAL=0.033

# ===== Projector Configuration =====
PROJECTOR_DISPLAY_INDEX=1
PROJECTOR_WIDTH=1920
PROJECTOR_HEIGHT=1080
PROJECTOR_FULLSCREEN=false
CALIBRATION_GRID_SIZE=10
CALIBRATION_POINTS_X=9
CALIBRATION_POINTS_Y=6

# ===== Physics Engine Configuration =====
PHYSICS_TIME_STEP=0.016
PHYSICS_GRAVITY=9.81
BALL_RADIUS=0.02875
TABLE_FRICTION=0.1
CUSHION_RESTITUTION=0.9

# ===== Performance Configuration =====
MAX_CONCURRENT_CONNECTIONS=100
FRAME_BUFFER_SIZE=30
MAX_MEMORY_USAGE_MB=2048
API_TIMEOUT=30
WEBSOCKET_TIMEOUT=60
VISION_PROCESSING_TIMEOUT=5

# ===== Database Configuration (Optional) =====
# Uncomment and configure if using PostgreSQL
# POSTGRES_DB=billiards_trainer
# POSTGRES_USER=billiards
# POSTGRES_PASSWORD=CHANGE-THIS-SECURE-PASSWORD
# POSTGRES_PORT=5432
# DATABASE_URL=postgresql://billiards:password@postgres:5432/billiards_trainer

# ===== Redis Configuration =====
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb
# REDIS_PASSWORD=  # Uncomment if Redis auth is needed

# ===== Monitoring Configuration =====
ENABLE_METRICS=true
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# ===== Docker Resource Limits =====
BACKEND_MEMORY_LIMIT=4G
BACKEND_CPU_LIMIT=2.0
BACKEND_MEMORY_RESERVATION=1G
BACKEND_CPU_RESERVATION=0.5

# ===== Container Configuration =====
# Set to 'true' if you need privileged access for camera/hardware
# PRIVILEGED_MODE=false

# ===== Development Overrides =====
# Uncomment these for development
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# JWT_SECRET_KEY=dev-secret-key-not-for-production
# DEFAULT_API_KEY=dev-api-key
